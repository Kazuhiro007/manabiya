<!DOCTYPE html>
<html>
  <head>
    <title>Lecture</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>　
    <nav class="navbar navbar-default navbar-fixed-top navbar-transparent">
        <div class="container">
          <ul class="nav navbar-nav navbar-right">
            <% if logged_in? %>
              <li>
                <%= link_to edit_user_path(id: current_user.id) do %>
                  <p>プロフィール編集</p>
                <% end %>
              </li>
              <li>
                <%= link_to lessons_path do %>
                  <p>一覧</p>
                <% end %>
              </li>
              <li>
                <%= link_to lessons_path(user_id: current_user.id), method: :get do %>
                  <p>管理</p>
                <% end %>
              </li>
              <li>
                <%= link_to favorites_path do %>
                  <p>気になる</p>
                <% end %>
              </li>
              <li>
                <%= link_to participates_path do %>
                  <p>申請済み</p>
                <% end %>
              </li>
              <li>
                <%= link_to logout_path, method: :delete do %>
                  <p>ログアウト</p>
                <% end %>
              </li>
            <% else %>
              <li>
                <%= link_to new_user_path do %>
                  <p>新規登録</p>
                <% end %>
              </li>
              <li>
                <%= link_to login_path do %>
                  <p>ログイン</p>
                <% end %>
              </li>
            <% end %>
          </ul>
        </div>
      </nav>
    <% if flash[:notice] %>
      <div class="alert alert-success">
        <%= flash[:notice] %>
      </div>
    <% end %>
    <% if flash[:alert] %>
      <div class="alert alert-danger">
        <%= flash[:alert] %>
      </div>
    <% end %>
    <%= yield %>
  </body>
</html>
